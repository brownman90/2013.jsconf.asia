@import "nib-index.styl"

html, body
	font-family 'Open Sans'
	background linear-gradient(top, darken(#56AAEB, 50%) 0%, #56AAEB 55%, darken(#56AAEB, 30%) 60%, darken(#56AAEB, 80%) 100%),
			   radial-gradient(center, ellipse cover, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 100%)
	width 100vw
	height 100vh

div.logo
	width 200px;
	height 200px;
	position relative

div.logo:after
	position absolute
	display block
	width 200px
	height 200px
	content ""
	background-image url('../img/js.svg')

header h2 
	text-transform uppercase
	font-size 3vmin
	margin 0 1vmin -1vmin 0
	font-family 'Doppio One'
